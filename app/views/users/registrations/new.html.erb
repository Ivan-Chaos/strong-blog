
<div class="d-flex justify-content-center h-100">
		
    <div class="card sign-in">
			<div class="card-header">
				<h3>Sign Up</h3>
			</div>
			<div class="card-body">
				
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
            <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder:"Username", class: "form-control" %>
						
					</div>

          <div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-envelope-open-text"></i></span>
						</div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class: "form-control" %>
						
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "Password(minimum 6 characters)" %>
					</div>

          <div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "Confirm password" %>
					</div>

					<div class="form-group">
            <%= f.submit "Create my account", class: "btn float-right login-btn" %>
					</div>
				<% end %>
			</div>
			<div class="card-footer">
        <div class="d-flex justify-content-center links">
          <p>Remembered about your account? <%= link_to 'Go back and sign in!', new_user_session_path %></p>
        </div>

			</div>
		</div>
  </div>
</div>

