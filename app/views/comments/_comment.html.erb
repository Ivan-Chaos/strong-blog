<div class="card comment">
  <div class="card-header d-flex">
    <h5 class="mr-auto p-2"><%= comment.author.username %> <small> <%= comment.created_at.strftime("on %m/%d/%Y")+comment.created_at.strftime(" at %I:%M%p")%> </small></h5>
    <% if policy(comment).destroy? %>
      <%= link_to [comment.post, comment],
                  method: :delete,
                  data: { confirm: "Are you sure you wanna delete you precious opinion?" } do %>
        <h5 class="p-2"><i class="fas fa-trash-alt delete-button"></i></h5>
      <% end %>
    <% end %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= comment.body %></p>
    </blockquote>
    
  </div>
</div>
