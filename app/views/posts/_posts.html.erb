<% @posts.each do |post| %>
    <div class="card view-post" style="margin:1%">
        
        <% if post.file.attached? %>
            <img class="card-img-top" src="<%= url_for(post.file) %>" alt="Card image cap">
        <% end %>

        <div class="card-header post-title">
            <%= link_to post.title, post_path(post) %>
        </div>
        <div class="card-body post-body">
            <blockquote class="blockquote mb-0">
            <%= truncate(post.body, length: 100) %>
            </blockquote>
        </div>
        <div class="card-footer">
            <% if policy(post).update? %>
                <%= link_to "Edit", edit_post_path(post), class: "btn btn-primary" %>
            <% end %>
            <% if policy(post).destroy? %>    
                <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger" %>
            <% end %>

            <p> Created by: <%= post.author.username %></p>
        </div>
    </div>
<% end %>