<div class="card" style="margin-top: 5%">
  
  <% if @post.file.attached? %>
    <%= image_tag @post.file %>
  <% else %>
   <h1>no</h1>
  <% end %>



  <div class="card-header">
    <h5 class="card-title"><%= @post.title %></h5>
    <p> <%= @post.created_at %></p>
    <p> <%= @post.author.username %>
  </div>
  <div class="card-body">
    <p class="card-text"> <%= @post.body%></p>
    <% if policy(@post).update? %>
      <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary" %>
    <% end %>
    <% if policy(@post).destroy? %>    
      <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger" %>
    <% end %>
    
    <%= link_to 'Back', posts_path, class: "btn btn-success" %>
  </div>
  <div class="card footer">
    <%= render @post.comments %>
    <%= render 'comments/form' %>
  </div>
</div>