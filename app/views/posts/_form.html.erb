<%= render 'shared/errors' %>

<div class="card card-form" style="background-color: rgba(0, 0, 0, 0);">
  <div class="card-header d-flex justify-content-center">
    <h1>Create a new post</h1>
  </div>
  <div class="card-body new-post-card-body">
    <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <%= f.label :title, class: 'create-label' %>
        <%= f.text_field :title, class: "form-control field post-input", placeholder: "Title of article", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :body, class: 'create-label' %>
        <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "Body of article" %>
      </div>

      <div class="form-group">
        <label for="formFileLg" class="form-label">Wanna express yourself even further? <b>Upload a photo</b></label>
        <%= f.file_field :file, class: "form-control form-control-lg", id:"validatedCustomFile" %>
      </div>
      <div class="form-group d-flex align-items-center justify-content-end">
        <p class="align-self-center status-string">You're about to make a <span>
        <%= f.select(:status, ['public', 'private'], {}, { :class => 'status-select' }) %></span>
        post</p>
        <%= f.submit class: 'btn create-btn'%>
      </div>
      <% end %>

  </div>
</div>





